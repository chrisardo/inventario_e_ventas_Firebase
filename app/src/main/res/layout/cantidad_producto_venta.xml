<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/barraSuperiorId"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#1E88E5"
            android:elevation="6dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Añadir producto a la venta"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        <ImageView
                android:id="@+id/cancelarVentaProducto_imView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/ic_clear_black_24dp"
                android:text="Salir" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">
            <TextView
                    android:id="@+id/nombreProductoVenta"
                    android:text="Nombre del producto"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/disminuirCantidad"
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:textSize="42sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/cantidadProductoVenta"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:textSize="32sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/aumentarCantidad"
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:textSize="42sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/precioProductoVenta"
                    android:text="S/.10.00"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#3F51B5"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/carritoVentaProducto_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/lavender_border"
                        android:text="Añadir"
                        android:drawableLeft="@drawable/ic_add_shopping_cart"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"/>
                <!--<androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancelarProducto_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/lavender_border"
                        android:text="CANCELAR"
                        android:drawableLeft="@drawable/ic_clear_black_24dp"
                        android:textColor="#F44336"
                        android:textStyle="bold"/>-->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>