<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReciboTicketActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:background="@color/purple_500"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/uploadimg"
                    android:id="@+id/imLogoEmpresa"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            <TextView
                    android:id="@+id/tv_nombreEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la empresa"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textColor="#fff"
                                android:layout_width="match_parent"
                                android:text="Razón social"
                                android:paddingLeft="10dp"
                                android:textStyle="bold|italic"
                                android:paddingTop="3dp"
                                android:drawableLeft="@drawable/ic_phone"
                                android:background="@color/purple_500"
                                android:paddingRight="6dp"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/tv_razonScialEmpresa"
                                android:layout_width="match_parent"
                                android:text="Razón social"
                                android:paddingLeft="14dp"
                                android:paddingTop="5dp"
                                android:paddingRight="6dp"
                                android:textSize="16sp"
                                android:textStyle="bold|italic"
                                android:paddingBottom="10dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/textCategory"
                                android:textColor="#fff"
                                android:layout_width="match_parent"
                                android:text="Ruc"
                                android:textStyle="bold|italic"
                                android:paddingLeft="14dp"
                                android:paddingTop="5dp"
                                android:paddingRight="6dp"
                                android:background="@color/purple_500"
                                android:drawableLeft="@drawable/ic_qr_code_scanner"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/tv_rucEmpresa"
                                android:layout_width="match_parent"
                                android:text="Ruc de la empresa"
                                android:paddingLeft="5dp"
                                android:textStyle="bold|italic"
                                android:paddingTop="5dp"
                                android:paddingRight="6dp"
                                android:paddingBottom="10dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/Hora"
                                android:textColor="#fff"
                                android:layout_width="match_parent"
                                android:text="Celular"
                                android:paddingLeft="14dp"
                                android:textStyle="bold|italic"
                                android:paddingTop="5dp"
                                android:drawableLeft="@drawable/ic_phone"
                                android:background="@color/purple_500"
                                android:paddingRight="6dp"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/tv_celularEmpresa"
                                android:layout_width="match_parent"
                                android:text="Celular"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingRight="6dp"
                                android:textStyle="bold|italic"
                                android:paddingBottom="10dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingRight="14dp"
                            android:background="@color/purple_500"
                            android:text="Direccion de la empresa"
                            android:drawableLeft="@drawable/ic_store"
                            android:textColor="#fff"
                            android:textStyle="bold|italic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/tv_direccionEmpresa"
                                    android:paddingRight="14dp"
                                    android:paddingLeft="14dp"
                                    android:textSize="16dp"
                                    android:text="Direccion de la empresa"
                                    android:textStyle="bold|italic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16dp"
                    android:background="@color/purple_500"
                    android:textStyle="bold|italic"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_edit"
                    android:text="Descripcion breve acerca de la empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_descripcionEmpresa"
                        android:text="assd"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
