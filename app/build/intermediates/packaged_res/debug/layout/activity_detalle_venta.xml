<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetalleVentaActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recCard"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/lavender_border"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detalle de la venta"
                            android:textColor="@color/lavender"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/serieVenta_tv"
                                android:text="Numero serie de venta"
                                android:textColor="@color/lavender"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_calendar"
                                android:id="@+id/carritoventa"
                                android:layout_marginLeft="2dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                        <TextView
                                android:id="@+id/fechaventa_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="23/02/2023 "
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/horaventa_tv"
                                android:text="15:10:12"
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                    </LinearLayout>
                    <TextView
                            android:background="@color/lavender"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="2px"
                            android:layout_height="3dp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_supervised_user"
                                android:layout_marginLeft="2dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Cliente: "
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/nombreCliente_tv"
                                android:text="Nombre del cliente"
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <TextView
                            android:background="@color/lavender"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="2px"
                            android:layout_height="3dp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_pago"
                                    android:layout_marginLeft="2dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:id="@+id/tipoPago_tv"
                                    android:text="Efectivo"
                                    android:textColor="@color/lavender"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="1dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_marginLeft="66dp"
                                android:gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total:"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="1dp"/>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:text="S/."
                                        android:textColor="@color/lavender"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="1dp"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:id="@+id/totalVenta_tv"
                                        android:text="100.00"
                                        android:textColor="@color/lavender"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="1dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                            android:background="@color/lavender"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="2px"
                            android:layout_height="3dp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Pago del cliente S/."
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/pagoCliente_tv"
                                android:text="0.00"
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Vuelto del cliente S/."
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/vueltoCliente_tv"
                                android:text="0.00"
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="10dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de productos"
                android:textColor="@color/lavender"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detalleVentaProductoRv"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                tools:listitem="@layout/rv_detalle_lista_venta"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/progressBar"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminateTint="@color/lavender"/>
        <TextView
                android:id="@+id/tvLoadingData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Loading..."
                android:textSize="18sp"
                android:textColor="@color/lavender"
                android:gravity="start|center_vertical"/>
    </LinearLayout>
</RelativeLayout>