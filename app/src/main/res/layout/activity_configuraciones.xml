<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
         android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfiguracionesActivity">
    <androidx.cardview.widget.CardView
            android:id="@+id/reciboTicket_cv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/lavender_border"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ProveedorImagen_iv"
                    android:src="@drawable/ic_store"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/codigoProducto_tv"
                        android:text="Recibo / Ticket"
                        android:textColor="@color/lavender"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puedes personalizar la  infromacion de tu empresa y los recibos"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--<LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/id_eliminar"
                        android:src="@drawable/ic_delete"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="14dp"/>
            </LinearLayout>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/compartir_cv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/lavender_border"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/compartir_iv"
                    android:src="@drawable/ic_share"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Compartir"
                        android:textColor="@color/lavender"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puedes compartir la app para recomendar a tus contactos que lo usen"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--<LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/id_eliminar"
                        android:src="@drawable/ic_delete"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="14dp"/>
            </LinearLayout>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>