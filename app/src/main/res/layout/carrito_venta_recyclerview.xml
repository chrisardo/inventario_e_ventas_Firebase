<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recCard"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/lavender_border"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/ProductoImagen_iv"
                android:src="@drawable/icono_ventas"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="260dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/nombreProducto_tv"
                        android:text="Nombre del producto"
                        android:textColor="@color/lavender"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/Cantidad_tv"
                        android:text="Cantidad: "
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/cantidadProductoVenta_tv"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:textSize="22sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="SubTotal: "
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="S/."
                            android:textColor="@color/lavender"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/precioProducto_tv"
                            android:text="100.00"
                            android:textColor="@color/lavender"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:id="@+id/quitarcarritoventa"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>