<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detalleProveedorActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="180dp">

            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/uploadimg"
                    android:id="@+id/imagenProveedor"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            <TextView
                    android:id="@+id/tv_nombreProveedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Proveedor"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/textCategory"
                                    android:textColor="#fff"
                                    android:layout_width="match_parent"
                                    android:text="CELULAR"
                                    android:textStyle="bold|italic"
                                    android:paddingLeft="14dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:background="@color/purple_500"
                                    android:drawableLeft="@drawable/ic_phone"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/tv_celularProveedor"
                                    android:layout_width="match_parent"
                                    android:text="+51 987654321"
                                    android:paddingLeft="5dp"
                                    android:textStyle="bold|italic"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:paddingBottom="4dp"
                                    android:layout_height="44dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/Country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/purple_500"
                                    android:paddingLeft="14dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:drawableLeft="@drawable/ic_email"
                                    android:textStyle="bold|italic"
                                    android:text="CORREO"
                                    android:textColor="#fff" />
                            <TextView
                                    android:id="@+id/tv_correoProveedor"
                                    android:layout_width="match_parent"
                                    android:text="chrisardorojas@gmail.com"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="1dp"
                                    android:textStyle="bold|italic"
                                    android:paddingBottom="14dp"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:paddingLeft="14dp"
                                android:paddingTop="5dp"
                                android:paddingRight="14dp"
                                android:background="@color/purple_500"
                                android:text="DirecciÃ³n del Proveedor "
                                android:drawableLeft="@drawable/ic_home"
                                android:textColor="#fff"
                                android:textStyle="bold|italic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/tv_direccionProveedor"
                                        android:paddingRight="14dp"
                                        android:paddingLeft="14dp"
                                        android:textSize="16dp"
                                        android:text="callenueva 123"
                                        android:textStyle="bold|italic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>