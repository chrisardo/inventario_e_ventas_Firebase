<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detalleProductoActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="180dp">

            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/uploadimg"
                    android:id="@+id/imProducto"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            <TextView
                    android:id="@+id/tv_nombreProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Producto"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/textCategory"
                                    android:textColor="#fff"
                                    android:layout_width="match_parent"
                                    android:text="CODIGO"
                                    android:textStyle="bold|italic"
                                    android:paddingLeft="14dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:background="@color/purple_500"
                                    android:drawableLeft="@drawable/ic_qr_code_scanner"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/tv_codigoProducto"
                                    android:layout_width="match_parent"
                                    android:text="Plato principal"
                                    android:paddingLeft="5dp"
                                    android:textStyle="bold|italic"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:paddingBottom="4dp"
                                    android:layout_height="44dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/Country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/purple_500"
                                    android:paddingLeft="14dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:drawableLeft="@drawable/ic_store"
                                    android:textStyle="bold|italic"
                                    android:text="STOCK"
                                    android:textColor="#fff" />
                            <TextView
                                    android:id="@+id/tv_stockProducto"
                                    android:layout_width="match_parent"
                                    android:text="100 unidades"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="1dp"
                                    android:textStyle="bold|italic"
                                    android:paddingBottom="14dp"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/Hora"
                                    android:textColor="#fff"
                                    android:layout_width="match_parent"
                                    android:text="Precio"
                                    android:paddingLeft="14dp"
                                    android:textStyle="bold|italic"
                                    android:paddingTop="5dp"
                                    android:drawableLeft="@drawable/ic_edit"
                                    android:background="@color/purple_500"
                                    android:paddingRight="14dp"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/tv_precioProducto"
                                    android:layout_width="match_parent"
                                    android:text="45 m"
                                    android:paddingLeft="14dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="14dp"
                                    android:textSize="16sp"
                                    android:textStyle="bold|italic"
                                    android:paddingBottom="14dp"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:paddingLeft="14dp"
                                android:paddingTop="5dp"
                                android:paddingRight="14dp"
                                android:background="@color/purple_500"
                                android:text="Categoria "
                                android:drawableLeft="@drawable/ic_category"
                                android:textColor="#fff"
                                android:textStyle="bold|italic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/tv_categoria"
                                        android:paddingRight="14dp"
                                        android:paddingLeft="14dp"
                                        android:textSize="16dp"
                                        android:text="Nombre de la categoria"
                                        android:textStyle="bold|italic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:paddingLeft="14dp"
                                android:paddingTop="5dp"
                                android:paddingRight="14dp"
                                android:background="@color/purple_500"
                                android:text="Proveedor "
                                android:drawableLeft="@drawable/ic_supervised_user"
                                android:textColor="#fff"
                                android:textStyle="bold|italic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/tv_proveedor"
                                        android:paddingRight="14dp"
                                        android:paddingLeft="14dp"
                                        android:textSize="16dp"
                                        android:text="Ingre"
                                        android:textStyle="bold|italic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp"
                        android:background="@color/purple_500"
                        android:textStyle="bold|italic"
                        android:textColor="#fff"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_supervised_user"
                        android:text="Descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tv_descripcionProducto"
                            android:text="assd"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
               <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_marginTop="6dp"
                       android:layout_height="wrap_content">
                   <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/btn_editarProducto"
                           android:layout_width="150dp"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="16dp"
                           android:background="@drawable/lavender_border"
                           android:text="Editar"
                           android:drawableLeft="@drawable/ic_edit"
                           android:textColor="#4CAF50"
                           android:textStyle="bold"/>
                   <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/btn_eliminarProducto"
                           android:layout_width="150dp"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="16dp"
                           android:background="@drawable/lavender_border"
                           android:text="ELIMINAR"
                           android:drawableLeft="@drawable/ic_delete"
                           android:textColor="#F44336"
                           android:textStyle="bold"/>
               </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>