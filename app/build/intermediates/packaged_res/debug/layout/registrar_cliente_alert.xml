<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <LinearLayout
            android:id="@+id/barraSuperiorId"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#1E88E5"
            android:elevation="6dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_person_add" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Registrar Cliente"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        <ImageView
                android:id="@+id/btn_cerrar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/ic_close"
                android:text="Salir" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nombreProductoLayout"
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#4CAF50"
                    app:hintTextColor="#4CAF50">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nombreCliente"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del cliente"
                        android:maxLines="24"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                <ProgressBar
                        android:id="@+id/progressBarLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/celuarClienteLayout"
                        style="@style/LoginTextInputOuterFieldStyle"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="#4CAF50"
                        app:hintTextColor="#4CAF50">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_celularCliente"
                            style="@style/LoginTextInputInnerFieldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Celular"
                            android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dniLayout"
                        style="@style/LoginTextInputOuterFieldStyle"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="#4CAF50"
                        android:layout_marginLeft="6dp"
                        app:hintTextColor="#4CAF50">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_DniCliente"
                            style="@style/LoginTextInputInnerFieldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="DNI del cliente"
                            android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_registrarCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/lavender_border"
                        android:text="Registrar"
                        android:drawableLeft="@drawable/ic_person_add"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"/>
                <!--<androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancelarProveedor"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/lavender_border"
                        android:text="CANCELAR"
                        android:drawableLeft="@drawable/ic_clear_black_24dp"
                        android:textColor="#F44336"
                        android:textStyle="bold"/>-->
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>