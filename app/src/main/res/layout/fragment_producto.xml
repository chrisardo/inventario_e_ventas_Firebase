<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.ProductoFragment">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:background="@drawable/lavender_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"/>
            <TextView
                    android:id="@+id/tvProductEncontrados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Productos"/>
            <TextView
                    android:id="@+id/tvseparador"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#673AB7"
            />
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductos"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/producto_recycler"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/progressBar"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminateTint="@color/lavender"/>
            <TextView
                    android:id="@+id/tvLoadingData"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cargando Productos..."
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/lavender"
                    android:gravity="start|center_vertical"/>
        </LinearLayout>
        <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fabPrincipal"
                app:menu_fab_label="Menu"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="64dp"
                app:fab_colorNormal="@color/lavender">
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabAddProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_add"
                    app:fab_size="mini"
                    app:fab_label="Agregar Producto"
                    app:fab_colorNormal="@color/lavender"
                    app:fab_colorPressed="@color/lavender"
                    app:fab_colorRipple="@color/lavender"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="@color/lavender"
                    app:fab_shadowRadius="4dp"
                    app:fab_shadowXOffset="1dp"
                    app:fab_shadowYOffset="3dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/app_name"
                    tools:ignore="OnClick"/>
        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>
</FrameLayout>
