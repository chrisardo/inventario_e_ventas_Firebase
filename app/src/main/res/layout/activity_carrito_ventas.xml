<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CarritoVentasActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recCard"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp"
                android:background="@drawable/lavender_border"
                app:cardElevation="8dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Importe total:"
                            android:layout_width="wrap_content"
                            android:textSize="22dp"
                            android:layout_marginLeft="12dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/total_tv"
                            android:text=" S/. 0.00"
                            android:layout_width="wrap_content"
                            android:textSize="22dp"
                            android:layout_marginLeft="140dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Clientes:"
                                android:textSize="20sp"
                                android:textColor="@color/lavender"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/ClienteImagen_iv"
                                    android:src="@drawable/ic_supervised_user"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:scaleType="centerCrop"/>
                            <Spinner
                                    android:id="@+id/nombreCliente_spinner"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/lavender_border"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Forma de pago:"
                                android:textSize="20sp"
                                android:textColor="@color/lavender"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/PagoImagen_iv"
                                    android:src="@drawable/ic_pago"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:scaleType="centerCrop"/>
                            <Spinner
                                    android:id="@+id/formaPago_spinner"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/lavender_border"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/tvseparador"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:background="#673AB7"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/carritoVentaRecyclerView"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/carrito_venta_recyclerview"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/progressBar"
            android:orientation="horizontal"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminateTint="@color/lavender"/>
        <TextView
                android:id="@+id/tvLoadingData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Loading..."
                android:textSize="18sp"
                android:textColor="@color/lavender"
                android:gravity="start|center_vertical"/>
    </RelativeLayout>
</RelativeLayout>