<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.ProveedorFragment">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <SearchView
                    android:id="@+id/searchView"
                    android:background="@drawable/lavender_border"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />
            <TextView
                    android:id="@+id/tvProvidersEncontrados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Proveedores"/>
            <TextView
                    android:id="@+id/tvseparador"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#673AB7"
            />
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/proveedorRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    tools:listitem="@layout/proveedor_recycler"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/progressBar"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminateTint="@color/lavender"/>
            <TextView
                    android:id="@+id/tvLoadingData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="Loading..."
                    android:textSize="18sp"
                    android:textColor="@color/lavender"
                    android:gravity="start|center_vertical"/>
        </LinearLayout>
        <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fabPrincipal"
                app:menu_fab_label="Menu"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="64dp"
                app:fab_colorNormal="@color/lavender"
                >
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabAddProveedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_add"
                    app:fab_size="mini"
                    app:fab_label="Agregar Proveedor"
                    app:fab_colorNormal="@color/lavender"
                    app:fab_colorPressed="@color/lavender"
                    app:fab_colorRipple="@color/lavender"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="@color/lavender"
                    app:fab_shadowRadius="4dp"
                    app:fab_shadowXOffset="1dp"
                    app:fab_shadowYOffset="3dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/app_name" tools:ignore="OnClick"/>
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabArchivarProveedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_archive"
                    app:fab_size="mini"
                    app:fab_label="Ver Proveedores Archivados"
                    app:fab_colorNormal="@color/lavender"
                    app:fab_colorPressed="@color/lavender"
                    app:fab_colorRipple="@color/lavender"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="@color/lavender"
                    app:fab_shadowRadius="4dp"
                    app:fab_shadowXOffset="1dp"
                    app:fab_shadowYOffset="3dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/app_name" tools:ignore="OnClick"/>

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</FrameLayout>