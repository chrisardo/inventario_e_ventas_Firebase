<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recCard"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginHorizontal="10dp"

        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/lavender_border"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/ProveedorImagen_iv"
                android:src="@drawable/ic_supervised_user"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/dniCliente_tv"
                    android:text="Numero D.N.I"
                    android:textColor="@color/lavender"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Cliente: "
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/nombreCliente_tv"
                        android:text="Christian Eduardo Rojas Lozano"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/id_llamar"
                android:src="@drawable/ic_phone_callback"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>